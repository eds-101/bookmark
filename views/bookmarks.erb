<h1>Here are your bookmarks</h1>
<ul>
  <% @bookmark_list.each do |bookmark| %>
    <li class="bookmark" id="bookmark-<%= bookmark.id %>">
      <a href="<%= bookmark.url %>" target="_blank">
        <%= bookmark.title %>
      </a>
      <form action="/bookmark/<%= bookmark.id %>" method="post">
        <input type='hidden' name='_method' value='DELETE'/>
        <input type="submit" value="Delete" />
      </form>

      <form action="/update_bookmark/<%= bookmark.id %>" method="post">
        <input type='hidden' name='_method' value='PATCH'/>
        
        <input type='text' name='url' value='<%= bookmark.url %>' ><br>
        <input type='text' name='title' value='<%= bookmark.title %>'>

        <input type="submit" value="Update" />
      </form>


    </li>
  <% end %>
</ul>

 